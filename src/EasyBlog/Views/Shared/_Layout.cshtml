<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="@ViewData["Description"]">
    <title>@ViewData["Title"] - EasyBlog</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>

<header class="top-bar">
    <nav>
        <a asp-area="" asp-controller="Posts" asp-action="Index"><span>&#x1F3E0;&nbsp;</span>Home</a>
        <a asp-area="" asp-controller="Posts" asp-action="Privacy">Privacy</a>
        @await Html.PartialAsync("_LoginPartial")
    </nav>
</header>

<main role="main" class="content">
    @RenderBody()
</main>

<footer>
    &copy; @(DateTime.UtcNow.Year) - EasyBlog
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>