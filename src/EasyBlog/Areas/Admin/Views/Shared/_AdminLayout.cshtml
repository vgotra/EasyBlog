<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - EasyBlog</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>

<header class="top-bar">
    <nav>
        <a asp-area="Admin" asp-controller="Management" asp-action="Index">Management Area</a>
        <a asp-area="Admin" asp-controller="PostsManagement" asp-action="Index">Posts Management</a>
        <a asp-area="Admin" asp-controller="SettingsManagement" asp-action="Index">Settings Management</a>
    </nav>
</header>

<main role="main" class="content">
    @RenderBody()
</main>

<footer>
    &copy; @(DateTime.UtcNow.Year) - EasyBlog
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>