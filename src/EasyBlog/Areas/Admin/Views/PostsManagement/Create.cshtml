@model EasyBlog.Models.Posts.PostManagementViewModel

@{
    ViewData["Title"] = "Create Post";
}

<h1 class="title is-4">Create Post</h1>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-12">
        <label for="Title" class="form-label">Title</label>
        <input type="text" class="form-control" id="Title" asp-for="Title"/>
        <div class="text-danger" asp-validation-for="Title"></div>
    </div>

    <div class="col-md-12">
        <label for="Content" class="form-label">Content</label>
        <textarea class="form-control" id="Content" asp-for="Content"></textarea>
        <div class="text-danger" asp-validation-for="Content"></div>
    </div>

    <div class="col-md-6">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="IsPublished" asp-for="IsPublished" onchange="togglePublishOnDate()"/>
            <label class="form-check-label" for="IsPublished">Is Published</label>
        </div>
    </div>

    <div class="col-md-6">
        <label for="PublishOnDate" class="form-label">Publish On Date</label>
        <input type="datetime-local" class="form-control" id="PublishOnDate" asp-for="PublishOnDate"/>
        <div class="text-danger" asp-validation-for="PublishOnDate"></div>
    </div>

    <div class="col-md-12">
        <label for="ReadableUrl" class="form-label">Readable Url</label>
        <input type="text" class="form-control" id="ReadableUrl" asp-for="ReadableUrl"/>
        <div class="text-danger" asp-validation-for="ReadableUrl"></div>
    </div>

    <div class="col-md-12">
        <label for="Tags" class="form-label">Tags</label>
        <input type="text" class="form-control use-bootstrap-tag" id="Tags" asp-for="Tags"/>
        <div class="text-danger" asp-validation-for="Tags"></div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            togglePublishOnDate();
            new UseBootstrapTag(document.querySelector('.use-bootstrap-tag'))
        });
    </script>
}