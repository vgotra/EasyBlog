@model EasyBlog.Models.Posts.PostManagementViewModel

@{
    ViewData["Title"] = "Post Details";
}

<h1 class="my-4">@Model.Title</h1>

<div class="mb-3">
    <p>@Model.Content</p>
    <p>
        <strong>Is Published:</strong> @Model.IsPublished
    </p>
    <p>
        <strong>Created Date:</strong> @Model.CreatedDate.ToString("g")
    </p>
    <p>
        <strong>Publish On Date:</strong> @Model.PublishOnDate?.ToString("g")
    </p>
    <p>
        <strong>Readable Url:</strong> @Model.ReadableUrl
    </p>
    <p>
        <strong>Tags:</strong> @string.Join(", ", Model.Tags)
    </p>
</div>

<div class="d-flex">
    <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>