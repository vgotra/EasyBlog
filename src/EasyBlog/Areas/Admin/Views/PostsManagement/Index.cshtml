@model EasyBlog.Models.Posts.PostManagementListViewModel

@{
    ViewData["Title"] = "Posts Management";
}

<h1 class="title is-4 my-4">Posts Management</h1>

<form method="get" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-6">
        <input type="text" name="searchQuery" value="@Model.SearchQuery" class="form-control" placeholder="Search"/>
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="row g-3 mb-4">
    <div class="col-md-12">
        <a class="btn btn-primary" asp-action="Create">Create New Post</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Is Published</th>
            <th>Created Date</th>
            <th>Publish On Date</th>
            <th>Readable Url</th>
            <th>Tags</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var post in Model.Posts)
        {
        <tr>
            <td>@post.Title</td>
            <td>@post.Content</td>
            <td>
                <input type="checkbox" disabled checked="@post.IsPublished"/>
            </td>
            <td>@post.CreatedDate.ToString("g")</td>
            <td>@post.PublishOnDate?.ToString("g")</td>
            <td>@post.ReadableUrl</td>
            <td>@post.Tags</td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@post.Id">View</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@post.Id">Delete</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("PaginationControl", Model)